per_cent = {'ТКБ': 5.6, 'СКБ': 5.9, 'ВТБ': 4.28, 'СБЕР': 4.0}
# словарь с распределением процентных ставок по вкладам в различных банках
x, y, z, v = per_cent["ТКБ"], per_cent["СКБ"], per_cent["ВТБ"], per_cent['СБЕР']
# созданны переменные - значения процентных ставок из словаря
money = int(input("Ведите сумму денежных средств, которую хотите положить на депозит:"))
# Общая формула: доход по вкладу = сумма вклада / 100% * % ставку / количество дней в году * количество дней действия вклада
tkb, skb, vtb, sber =money/100*x/365*365, money/100*y/365*365, money/100*z/365*365, money/100*v/365*365
# созданы переменные расчета депозита в каждом банке
deposit = [int(tkb), int(skb), int(vtb), int(sber)]
# cформирован список deposit значений — накопленные средства за год вклада в каждом из банков
print("deposit =", deposit)
# вывод списока deposit значений
print("Максимальная сумма, которую вы можете заработать — ", max(deposit))
# поиск максимального значения методом max(s) и его вывод на экран
